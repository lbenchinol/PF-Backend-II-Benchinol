<div>
    <h1 class="text-center fw-bold">Home</h1>
</div>

<div class="container d-flex flex-row mb-1">
    {{#each products}}
    <div id={{this._id}} class="card bg-body-secondary border border-black m-4" style="width: 18rem">
        <div class="card-body">
            <h5 class="card-title fw-bold">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text fw-semibold">Precio: $ {{this.price}}</p>
        </div>
    </div>
    {{/each}}
</div>

<div class="container mt-5">
    {{#each links}}
    <a class="text-center fs-5 fw-semibold link-primary link-underline-opacity-0 bg-info-subtle rounded p-2 mx-auto" href={{this.link}}>{{this.text}}</a>
    {{/each}}
</div>